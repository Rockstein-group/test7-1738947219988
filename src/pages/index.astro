---
import Seo from "../components/Seo.astro";
import "../styles/global.css";
import MainLayout from "../layouts/MainLayout.astro";
import Head from "../layouts/Head.astro";
import Banner from "../components/home/Banner.astro";
import Statistic from "../components/home/Statistic.astro";
import Missions from "../components/home/Missions.astro";
import Result from "../components/home/Result.astro";
import SimonCardon from "../components/home/SimonCardon.astro";

const seo = {
  title: "Bubble Green - Solutions Numériques Écoresponsables & Performantes",
  description: "Bubble Green propose des solutions numériques écoresponsables et performantes pour un web durable. Optez pour une technologie plus verte dès aujourd'hui !",
  keywords: "greenit, sustainable",
  canonical: "https://greenitimpact.io",
  image: "/images/gii_logo_seo.webp",
  type: "website",
  themeColor: "#ffffff",
};
---

<html lang="en" class="overflow-x-hidden scroll-smooth">
  <Head seo={seo} title="Bubble Green - Solutions Numériques Écoresponsables & Performantes" />
  <MainLayout>
    <Banner />
    <Statistic />
    <Missions/>
    <Result />
    <SimonCardon />
  </MainLayout>
</html>
