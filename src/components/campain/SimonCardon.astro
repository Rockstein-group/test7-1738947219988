---
import { Image } from "astro:assets";
import ContactForm from "../home/ContactForm.astro";
import VideoPlayer from "../VideoPlayer.astro";
// import imgimages_gii_logo_webp from "../../public/images/gii_logo_square.svg";
---

<section
  id="simon-cardon"
  class="py-10 md:pt-24 md:pb-44 bg-[#243946] relative px-4"
>
  <div
    class="container mx-auto text-white flex flex-col items-stretch lg:flex-row lg:gap-20"
  >
    <div class="flex flex-col gap-8">
      <div class="flex flex-col gap-10">
        <h2
          class="text-4xl leading-[1.5] md:text-[50px] md:leading-[75px] font-bold xl:min-w-[488px] xl:max-w-[488px]"
        >
          <span class="text-[#96F50A]">Simon Cardon</span> est l'expert !
        </h2>
        <div
          class="bg-white rounded-2xl p-6 md:px-10 md:pt-16 md:pb-12 w-full xl:min-w-[502px] xl:max-w-[502px] text-[#253946] flex flex-col gap-16"
        >
          <h3 class="text-center text-[32px] leading-snug font-bold">
            Envoyez-nous un message.
          </h3>
          <ContactForm />
        </div>
      </div>
    </div>
    <div class="bg-white rounded-3xl p-4 md:p-6 mt-6">
      <VideoPlayer />
    </div>
  </div>
</section>
