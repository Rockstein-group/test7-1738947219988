---
import { Image } from "astro:assets";
// import imgimages_gii_logo_webp from "../../public/images/gii_logo_square.svg";
---

<form class="flex flex-col gap-6">
  <div class="flex flex-col gap-4">
    <label for="name" class="font-semibold text-xs">Name</label>
    <input
      type="text"
      id="name"
      class="min-h-[56px] p-4 rounded-lg border border-solid border-[#253946]"
      placeholder="Your Name"
    />
  </div>
  <div class="flex flex-col gap-4">
    <label for="company" class="font-semibold text-xs">Company</label>
    <input
      type="text"
      id="company"
      class="min-h-[56px] p-4 rounded-lg border border-solid border-[#253946]"
      placeholder="Your company here"
    />
  </div>
  <div class="flex flex-col gap-4">
    <label for="email" class="font-semibold text-xs">Email</label>
    <input
      type="email"
      id="email"
      class="min-h-[56px] p-4 rounded-lg border border-solid border-[#253946]"
      placeholder="Your email address"
    />
  </div>
  <div class="flex flex-col gap-4">
    <label for="message" class="font-semibold text-xs">Message</label>
    <textarea
      rows="5"
      id="message"
      class="min-h-[56px] p-4 rounded-lg border border-solid border-[#253946]"
      placeholder="Your message here"></textarea>
  </div>
  <div class="flex flex-col self-end gap-4">
    <button
      class="bg-[#96F50A] border-none rounded-full min-h-[58px] py-5 pl-5 pr-8 inline-flex items-center gap-1 text-sm font-bold"
      >Send your message
      <span>
        <svg
          width="25"
          height="24"
          viewBox="0 0 25 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
