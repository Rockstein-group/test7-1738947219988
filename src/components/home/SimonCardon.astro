---
import { Image } from "astro:assets";
import ContactForm from "./ContactForm.astro";
// import imgimages_gii_logo_webp from "../../public/images/gii_logo_square.svg";
---

<section id="contact" class="py-10 md:pt-24 md:pb-44 bg-[#243946] relative px-4">
  <div class="container mx-auto text-white flex flex-col items-start lg:flex-row lg:gap-20">
    <div class="flex flex-col gap-8">
      <div class="flex flex-col gap-10">
        <h2 class="text-4xl leading-[1.5] md:text-[50px] md:leading-[75px] font-bold">
          <span class="text-[#96F50A]">Simon Cardon</span> est notre fer de lance!
        </h2>
        <p class="text-[25px] leading-snug">
          Il oeuvre pour un numérique plus éthique, souverain et écologique
          depuis plus de 9 ans.
        </p>
        <p class="text-[25px] leading-snug">Nhésitez pas à le contacter !</p>
      </div>
      <Image
        src="/images/simon-cardon-dirigeant.webp"
        alt="Simon Cardon"
        class="relative md:mx-auto lg:mx-0 lg:absolute bottom-0"
        width={425}
        height={647.52}
      />
    </div>
    <div
    class="bg-white rounded-2xl p-6 md:px-10 md:pt-16 md:pb-12 w-full xl:min-w-[663px] xl:max-w-[663px] text-[#253946] flex flex-col gap-16"
  >
    <h2 class="text-center text-[32px] leading-snug font-bold">
      Envoyez-nous un message.
    </h2>
   <ContactForm />
  </div>
  </div>
</section>
